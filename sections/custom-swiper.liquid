<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

<div class="custom-swiper-container myCustomSwiper">
    <div class="custom-swiper-wrapper">
        {% for block in section.blocks %}
        <div class="custom-swiper-slide">
            {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '720x' }}" alt="Slide Image" class="custom-slide-image"/>
            {% endif %}
            <div class="custom-slide-content">
                {% if block.settings.title %}
                    <h2>{{ block.settings.title }}</h2>
                {% endif %}
                {% if block.settings.text %}
                    <p>{{ block.settings.text }}</p>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Navigation Buttons -->
    <div class="custom-swiper-button-next"></div>
    <div class="custom-swiper-button-prev"></div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var customSwiper = new Swiper(".myCustomSwiper", {
        slidesPerView: 2,  // Aynı anda iki slide göster
        spaceBetween: 30,  // Slide'lar arası boşluk
        navigation: {
            nextEl: ".custom-swiper-button-next",
            prevEl: ".custom-swiper-button-prev",
        },
        loop: true
    });
});
</script>

<style>
    .custom-swiper-container {
        width: 100%;
        height: 300px;
        position: relative; /* Navigation buttonlarının slider içinde kalması için */
    }

    .custom-swiper-slide {
        background-color: #f2f2f2;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .custom-slide-content h2 {
        margin: 10px 0 5px 0;
    }

    .custom-slide-content p {
        font-size: 14px;
        color: #555;
    }

    .custom-swiper-button-next, .custom-swiper-button-prev {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        font-size: 24px;
        color: #333;
        background: rgba(255, 255, 255, 0.8);
        padding: 10px;
        cursor: pointer;
    }

    .custom-swiper-button-next {
        right: 10px;
    }

    .custom-swiper-button-prev {
        left: 10px;
    }
</style>

{% schema %}
{
  "name": "Custom Swiper Slider",
  "settings": [
    {
      "type": "text",
      "id": "slider_heading",
      "label": "Slider Heading",
      "default": "Featured Products"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "Slide Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Slide Text",
          "default": "This is the slide description."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Swiper Slider",
      "category": "Slideshow"
    }
  ]
}
{% endschema %}
